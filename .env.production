# Production Environment Variables
NODE_ENV=production

# Database Configuration (Neon MySQL)
DATABASE_URL=mysql://username:password@hostname:port/database_name
DB_NAME=eishro_db
DB_USER=eishro_user
DB_PASSWORD=your_secure_password
DB_HOST=your-neon-mysql-host
DB_PORT=3306
DB_LOGGING=false

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=https://final-platform-kvbk.vercel.app

# Backend URL (for frontend API calls)
BACKEND_URL=https://srv-d4p3d76r433s73edktfg.onrender.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Store Base Directory
STORE_BASE_DIR=/app

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Payment Gateway Configuration
MOAMALAT_API_KEY=your-moamalat-api-key
MOBICASH_API_KEY=your-mobicash-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security Configuration
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Security Headers
SECURITY_HEADERS=true
CORS_ORIGIN=https://final-platform-kvbk.vercel.app

# Failover Database (PostgreSQL from Neon)
FAILOVER_DATABASE_URL=postgresql://username:password@hostname:port/database_name
FAILOVER_ENABLED=true

# Redis Configuration (for caching - Optional)
REDIS_URL=redis://localhost:6379

# Frontend API Configuration
VITE_API_URL=https://srv-d4p3d76r433s73edktfg.onrender.com/api

# Minimax AI API Configuration (Optional - for enhanced features)
# Set VITE_MINIMAX_ENABLED=false to disable AI features and avoid API errors
VITE_MINIMAX_API_URL=https://api.minimax.chat/v1
VITE_MINIMAX_API_KEY=your-production-minimax-api-key
VITE_MINIMAX_ENABLED=false
VITE_MINIMAX_TIMEOUT=5000

# Frontend Production URL
FRONTEND_PRODUCTION_URL=https://final-platform-kvbk.vercel.app
